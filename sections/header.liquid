<header class="site-header" role="banner" data-section-id="{{ section.id }}" data-section-type="header-section">
  <div class="grid grid--no-gutters grid--table site-header__inner" id="navigation_bar">
    
    <div id="show_nav_button" >
      <button type="button" class="site-header__link text-link site-header__toggle-nav js-drawer-open-left">
        <span class="icon icon-hamburger" aria-hidden="true"></span>
        <span class="icon__fallback-text">{{ 'layout.navigation.menu' | t }}</span>
      </button>
    </div>
    
	<div class="nav_logo_section">
      
      {%- if settings.navigation_logo != blank -%}
      <a href="{{ routes.root_url }}" itemprop="url" class="site-header__logo-link">
       <img src={{ settings.navigation_logo | img_url  }} >
      </a>
      {%- else -%}
      <a href="{{ routes.root_url }}" id="header_txt_logo" class="site-header__link site-header__logo-link" style="text-align: center;"
        itemprop="url">{{ shop.name }}</a>
      {%- endif -%}
      
    </div>
    
    <div class="nav_link_part ">
      <ul class="navbar-nav mr-auto" >
        {% for link in linklists.main-menu.links %}
          <li> <a class="nav_item" href="{{ link.url }}">{{ link.title }}</a></li>
        {% endfor %}
      </ul>
    </div>
    

    
