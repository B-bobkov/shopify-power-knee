<style>
  .icon-hamburger:before {
  	padding: 0;
  }
  
  .site-header__logo img {
    max-width: {{ section.settings.logo_width | escape | default: '180' | remove: 'px' | append: 'px' }};
  }
  
  @media screen and (max-width: 749px) {
    .site-header__logo img {
      max-width: 100%;
    }
  }
  
  ul {
    list-style-type: none;
    margin: 0;
    padding: 0;
    overflow: hidden;
    display: table; 
    margin: 0 auto;
    float: {{ settings.nav_laptop_style }};
  }
  
  li {
    float: left;
    position: relative;
    padding-left: 7px;
    padding-right: 7px;
    font-weight: {{ settings.nav_laptop_menu_font_weight }};
    font-size: {{ settings.nav_laptop_menu_fsize }}px;
    font-family: {{ settings.nav_laptop_menu_font }};
  }
  .site-header__inner {
  	    height: auto;
  }
  #navigation_bar {
	padding-top: {{ settings.nav_laptop_top_pad }}px;
    padding-bottom: {{ settings.nav_laptop_bt_pad }}px;
    padding-left: {{ settings.nav_laptop_side_pad }}px;
    padding-right: {{ settings.nav_laptop_side_pad }}px;
    background-color: {{ settings.nav_laptop_back_col }};
  }
  
  .nav_item{
    color: {{ settings.nav_laptop_menu_fcol }}!important;
  }
  
  
  #show_nav_button {display: none;}
  
/*   Mobile style */
  @media only screen and (max-width: 900px) {
    
  	 
    
     .nav_link_part {display: none!important;}
    
     #navigation_bar {
       background-color: {{ settings.nav_mob_back_col }};
       height: auto;
	   padding-top: {{ settings.nav_mob_top_pad }}px;
       padding-bottom: {{ settings.nav_mob_bt_pad }}px;
  	 }
    
    li {
      font-family: {{ settings.nav_mob_menu_font }};
      font-weight: {{ settings.nav_mob_menu_font_weight }};
      font-size: {{ settings.nav_mob_menu_fsize }}px;
    }
    
    .nav_item{
      color: {{ settings.nav_mob_menu_fcol }}!important;
    }
    
    #NavDrawer {
      background-color: {{ settings.nav_mob_dropdown_back_color }};
    }
  }
  
  #header_txt_logo {
    padding: {{ settings.logo_box_pd_top_bt }}px {{ settings.logo_box_pd_side }}px;
  	font-family: {{ settings.logo_font }};
    font-weight: {{ settings.logo_font_weight }};
    font-size: {{ settings.logo_font_laptop_size_2 }}px;
    line-height: {{ settings.logo_font_laptop_size | plus: settings.logo_font_line_height }}px;
    color: {{ settings.logo_fcol }};
    
    {% if settings.logo_enable_box_outline == true %}		
		border: {{ settings.logo_box_border_thickness }}px solid {{ settings.logo_box_color }};
    {% endif %}
    
  }
  
    @media only screen and (max-width: 900px) {
  		#header_txt_logo {
         	font-size: {{ settings.logo_font_mob_size_2 }}px; 
        }
    }

  /*  account icon  */
  .icon-account:before {
    font-family: FontAwesome;
    display: inline-block;
    padding-right: 0px;
    vertical-align: middle;
    content: "\f007";	
      color: {{ settings.nav_srch_icon_color }};    
    font-size: {{ settings.nav_srch_icon_laptop_size }}px;
  }
  
  .icon-search:before {
    font-family: FontAwesome;
    display: inline-block;
    padding-right: 0px;
    vertical-align: middle;
    content: "\f{{settings.nav_srch_icon_icon}}";	
      color: {{ settings.nav_srch_icon_color }};    
    font-size: {{ settings.nav_srch_icon_laptop_size }}px;
  }
  
  {% if settings.nav_srch_icon_same_size_on_mob == false %}
    @media only screen and (max-width: 900px) {
      .icon-search:before, .icon-account:before {
        font-size: {{ settings.nav_srch_icon_mob_size }}px;
      }
    }
  {% endif %}
  
/* Icon cart   */
    .icon-cart:before {
    font-family: FontAwesome;
    display: inline-block;
    padding-right: 0px;
    vertical-align: middle;
    content: "\f{{settings.nav_cart_icon_icon}}";	
      color: {{ settings.nav_cart_icon_color }};    
    font-size: {{ settings.nav_cart_icon_laptop_size }}px;
  }
  
  {% if settings.nav_cart_icon_same_size_on_mob == false %}
    @media only screen and (max-width: 900px) {
      .icon-cart:before {
        font-size: {{ settings.nav_cart_icon_mob_size }}px;
      }
    }
  {% endif %}
  
  
  
</style>

<!-- border setting -->
{% if settings.nav_laptop_bt_border_enable == true %}
  <style>
    #navigation_bar{
      border-bottom: {{ settings.nav_laptop_bt_border_thickness }}px solid {{ settings.nav_laptop_bt_border_color }};
    }
  </style>
{% endif %}

{% if settings.nav_mob_bt_border_enable == true %}
  <style>
   @media only screen and (max-width: 900px) {
    #navigation_bar {
      border-bottom: {{ settings.nav_mob_bt_border_thickness }}px solid {{ settings.nav_mob_bt_border_color }};
     }
   }
  </style>
{% endif %}

<!-- highlight setting -->
{% if settings.nav_laptop_show_highlight == true %}
  <style>
    .nav_item:after {    
      background: none repeat scroll 0 0 transparent;
      bottom: 0;
      content: "";
      display: inline-block;
      height: 2px;
      left: 0%;
      position: absolute;
      background: {{ settings.nav_laptop_highlight_color }};
      transition: width 0.3s ease 0s, left 0.3s ease 0s;
      width: 0;
    }
    .nav_item:hover:after { 
      width: 100%; 
      left: 0; 
    }
  </style>
{% endif %}

  {% if settings.nav_menu_icon_enable == true %}
    <style>
            .nav_item:before {
                font-family: FontAwesome;
                display: inline-block;
                padding-right: 10px;
                vertical-align: middle;
                content: "\f{{settings.nav_menu_icon}}";	
                color: {{ settings.nav_icon_normal_menu_color }};
                font-size: {{ settings.nav_icon_normal_menu_laptop_size }}px;
            }
    </style>
  {% endif %}

  {% if settings.nav_menu_hlight_icon_enable == true %}
    <style>
            .nav_item:hover::before {
                font-family: FontAwesome;
                display: inline-block;
                padding-right: 10px;
                vertical-align: middle;
                content: "\f{{settings.nav_menu_hlight_icon}}";	
                color: {{ settings.nav_icon_high_menu_color }};
                font-size: {{ settings.nav_icon_high_menu_laptop_size }}px;
            }
    </style>
  {% endif %}


<!-- Shadow setting -->
{% if settings.nav_laptop_shadow_enable == true %}
  <style>
    #shopify-section-header{
      box-shadow: 0 {{ settings.nav_laptop_shadow_coverage }}px 10px {{ settings.nav_laptop_shadow_color }};
    }
  </style>
{% endif %}

{% if settings.nav_mob_shadow_enable == true %}
  <style>
    @media only screen and (max-width: 900px) {
      #shopify-section-header{
        box-shadow: 0 {{ settings.nav_mob_shadow_coverage }}px 10px {{ settings.nav_mob_shadow_color }};
      }
    }
  </style>
{% endif %}

