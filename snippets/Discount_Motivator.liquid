{% if block.settings.discount_motivator_congrat_font contains 'Google' %}
<link href="//fonts.googleapis.com/css?family={{ block.settings.discount_motivator_congrat_font | replace: 'Google_', '' | replace: "'", "" }}:light,normal,bold" rel="stylesheet" type="text/css" />
{% endif %}
{% if block.settings.discount_motivator_font contains 'Google' %}
<link href="//fonts.googleapis.com/css?family={{ block.settings.discount_motivator_font | replace: 'Google_', '' | replace: "'", "" }}:light,normal,bold" rel="stylesheet" type="text/css" />
{% endif %}

<!-- /*   GENERAL STYLE */ -->

<style>
  .discount_motivator_bar {
    
    background-color: {{ block.settings.discount_motivator_bg_col }};
    
    padding-top: {{ block.settings.discount_motivator_lap_top_pad }}px!important;
    padding-bottom: {{ block.settings.discount_motivator_lap_bt_pad }}px!important;
    padding-left: {{ block.settings.discount_motivator_lap_side_pad }}px!important;
    padding-right: {{ block.settings.discount_motivator_lap_side_pad }}px!important;
    
    {% if block.settings.discount_motivator_display_on == 'Mobile_Only' %}
      display: none;
    {% endif %}
    
    {% case block.settings.discount_motivator_border_style %}
      {% when 'full_border' %}
      	border: {{ block.settings.discount_motivator_border_thickness }}px solid {{ block.settings.discount_motivator_border_col }}!important;
    
      {% when 'top_bt_border' %}
        border-top: {{ block.settings.discount_motivator_border_thickness }}px solid {{ block.settings.discount_motivator_border_col }}!important;
        border-bottom: {{ block.settings.discount_motivator_border_thickness }}px solid {{ block.settings.discount_motivator_border_col }}!important;            
    
      {% when 'top_border_only' %}
      	border-top: {{ block.settings.discount_motivator_border_thickness }}px solid {{ block.settings.discount_motivator_border_col }}!important;
    
      {% when 'bottom_border_only' %}
      	border-bottom: {{ block.settings.discount_motivator_border_thickness }}px solid {{ block.settings.discount_motivator_border_col }}!important;
    
      {% when 'side_border_only' %}
        border-left: {{ block.settings.discount_motivator_border_thickness }}px solid {{ block.settings.discount_motivator_border_col }}!important;
        border-right: {{ block.settings.discount_motivator_border_thickness }}px solid {{ block.settings.discount_motivator_border_col }}!important;
    
    {% endcase %}
    
    {% if block.settings.discount_motivator_shadow_coverage > 0 %}
    	box-shadow: 0 {{ block.settings.discount_motivator_shadow_coverage }}px 3px {{ block.settings.discount_motivator_shadow_col }}!important;
    
    	{% if block.settings.discount_motivator_shadow_coverage > block.settings.discount_motivator_margin_pd_bt_lap %}
          margin-bottom: {{ block.settings.discount_motivator_shadow_coverage | plus: 1 }}px!important;
    	{% endif %}
    
    {% endif %}
    
    margin-top: {{ block.settings.discount_motivator_margin_pd_top_lap }}px;
    margin-bottom: {{ block.settings.discount_motivator_margin_pd_bt_lap }}px;
    
    text-align: {{ block.settings.discount_motivator_msg_align }};
    
  }
{% comment %}   
  {% if block.settings.discount_motivator_stick_bt_lap == true %}
    @media only screen and (min-width: 600px) {
      .discount_motivator_bar {
        position: fixed;
        bottom: 0px;
        width: 500px;
      }
    }
  {% endif %}
  
  {% if block.settings.discount_motivator_stick_bt_mob == true %}
    @media only screen and (max-width: 600px) {
      .discount_motivator_bar {
        position: fixed;
        bottom: 0px;
        width: 356.44px;
      }
    }
  {% endif %}   {% endcomment %}

</style>

<!-- /*   MOBILE STYLE */ -->

<style>
  @media only screen and (max-width: 600px) {
    .discount_motivator_bar{
      padding-top: {{ block.settings.discount_motivator_mob_top_pad }}px!important;
      padding-bottom: {{ block.settings.discount_motivator_mob_bt_pad }}px!important;
      padding-left: {{ block.settings.discount_motivator_mob_side_pad }}px!important;
      padding-right: {{ block.settings.discount_motivator_mob_side_pad }}px!important;
      
      {% if block.settings.discount_motivator_display_on == 'Desktop_Only' %}
      	display: none;
      {% endif %}
      
      margin-top: {{ block.settings.discount_motivator_margin_pd_top_mob }}px;
      margin-bottom: {{ block.settings.discount_motivator_margin_pd_bt_mob }}px;
      
      {% if block.settings.discount_motivator_shadow_coverage > 0 %}
    	box-shadow: 0 {{ block.settings.discount_motivator_shadow_coverage }}px 3px {{ block.settings.discount_motivator_shadow_col }}!important;
    
    	{% if block.settings.discount_motivator_shadow_coverage > block.settings.discount_motivator_margin_pd_bt_mob %}
          margin-bottom: {{ block.settings.discount_motivator_shadow_coverage | plus: 1 }}px!important;
    	{% endif %}
    
      {% endif %}
      
    } 
 
  }
</style>
<!-- End of mobile style -->

<!-- /*   SPECIFIC STYLE */ -->

<style>
    .discount_motivator_bar > p {margin: 0; display: initial; vertical-align: middle;}
    
    .discount_moti_headline {
        text-align: {{ block.settings.discount_motivator_price_align }};
    }

    .discount_moti_headline>p{
        margin: 0;
        display: contents;
        color: {{ block.settings.discount_motivator_fcol }}!important;
        font-family: {{ block.settings.discount_motivator_font | replace: 'Google_', '' | replace: '+', ' ' }}!important;
        font-size: {{ block.settings.discount_motivator_font_laptop_size }}px;
        font-weight: {{ block.settings.discount_motivator_font_weight }};
        line-height: {{ block.settings.discount_motivator_font_laptop_size | plus: block.settings.discount_motivator_line_height }}px; 
        letter-spacing:  {{ block.settings.discount_motivator_line_height }}px;
    }

    @media only screen and (max-width: 600px) {
        .discount_moti_headline>p{
            font-size: {{ block.settings.discount_motivator_font_mob_size }}px;
            line-height: {{ block.settings.discount_motivator_font_mob_size | plus: block.settings.discount_motivator_line_height }}px;  
            
        }
    }

    .discount_moti_prog_wrapper{
        border-radius: 4px;
        background-color: {{ block.settings.discount_motivator_prog_bar_bg_col }};
        margin: {{ block.settings.discount_motivator_prog_bar_lap_pd }}px 0;
    }
    
    @media only screen and (max-width: 600px) {
        .discount_moti_prog_wrapper{
            padding: {{ block.settings.discount_motivator_prog_bar_mob_pd }}px 0;
        }
    }

    .discount_moti_progressbar {
        border-radius: {{ block.settings.discount_motivator_prog_bar_radius }}px;
        background: linear-gradient(89.33deg, {{ block.settings.discount_motivator_prog_bar_pr_col }} 0%, {{ block.settings.discount_motivator_prog_bar_gradi_col }} 100%);
        transition: all 0.35s ease 0s;
        height: 13px;
        width: 0%;
        display: block;
        overflow: hidden;
    }

    .discount_moti_congra_txt{
        text-align: {{ block.settings.discount_motivator_congra_align }};
    }

    .discount_moti_congra_txt>p {
        margin: 0;
        color: {{ block.settings.discount_motivator_congrat_fcol }}!important;
        font-family: {{ block.settings.discount_motivator_congrat_font | replace: 'Google_', '' | replace: '+', ' ' }}!important;
        font-weight: {{ block.settings.discount_motivator_congrat_font_weight }};
        font-size: {{ block.settings.discount_motivator_congrat_font_laptop_size }}px;
        letter-spacing: {{ block.settings.discount_motivator_congrat_letter_spacing }}px;
        line-height: {{ block.settings.discount_motivator_congrat_font_laptop_size | plus: block.settings.discount_motivator_congrat_line_height }}px;  
    }

    @media only screen and (max-width: 600px) {
        .discount_moti_congra_txt>p {
            font-size: {{ block.settings.discount_motivator_congrat_font_mob_size }}px;
            line-height: {{ block.settings.discount_motivator_congrat_font_mob_size | plus: block.settings.discount_motivator_congrat_line_height }}px;  
        }
    }

</style>



<div class="discount_motivator_bar">

  
    <input id="discount_motivator_order_val" type="text" style="position:fixed; top:-100px;" value={{ block.settings.discount_motivator_order_val }} >
    <input id="discount_motivator_price_style" type="text" style="position:fixed; top:-100px;" value={{ block.settings.discount_motivator_price_style }} >
    <input id="discount_motivator_congra_pos" type="text" style="position:fixed; top:-100px;" value={{ block.settings.discount_motivator_congra_pos }} >
    <input id="discount_motivator_cong_bg" type="text" style="position:fixed; top:-100px;" value={{ block.settings.discount_motivator_cong_bg }} >
    <input id="discount_motivator_cong_bg_col" type="text" style="position:fixed; top:-100px;" value={{ block.settings.discount_motivator_cong_bg_col }} >
    <input id="discount_motivator_bg_col" type="text" style="position:fixed; top:-100px;" value={{ block.settings.discount_motivator_bg_col }} >

    <div class="discount_moti_headline">
        {% assign discount_motivator_headline = block.settings.discount_motivator_msg | split: '{{AMOUNT}}' %}
        {{ discount_motivator_headline[0] }}</p>
        <p class = "money_away_from_discount"></p>
        <p>{{ discount_motivator_headline[1] }}

    </div>

    <div class="discount_moti_congra_txt" style="display: none;">
        {{ block.settings.discount_motivator_congra_txt }}
    </div>

    <div class="discount_moti_prog_wrapper" >
        <span class="discount_moti_progressbar"> </span>
    </div>
  	
  {% if block.settings.discount_motivator_stick_bt_lap == true %}  
    <input class="sticky_lap" type="text" value="stick_lap_yes">
  {% else %}
    <input class="sticky_lap" type="text" value="stick_lap_no">
  {% endif %}

  {% if block.settings.discount_motivator_stick_bt_mob == true %}  
    <input class="sticky_mob" type="text" value="stick_mob_yes">
  {% else %}
    <input class="sticky_mob" type="text" value="stick_mob_no">
  {% endif %}  	

</div>


