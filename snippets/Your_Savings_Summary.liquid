{% if block.settings.your_savings_txt_font contains 'Google' %}
<link href="//fonts.googleapis.com/css?family={{ block.settings.your_savings_txt_font | replace: 'Google_', '' | replace: "'", "" }}:light,normal,bold" rel="stylesheet" type="text/css" />
{% endif %}

{% if block.settings.your_savings_price_font contains 'Google' %}
<link href="//fonts.googleapis.com/css?family={{ block.settings.your_savings_price_font | replace: 'Google_', '' | replace: "'", "" }}:light,normal,bold" rel="stylesheet" type="text/css" />
{% endif %}

  
<!-- /*   GENERAL STYLE */ -->

<style>
  .your_savings_summ_bar {
    
    background-color: {{ block.settings.your_savings_summ_bg_col }};
    
    padding-top: {{ block.settings.your_savings_summ_lap_top_pad }}px!important;
    padding-bottom: {{ block.settings.your_savings_summ_lap_bt_pad }}px!important;
    padding-left: {{ block.settings.your_savings_summ_lap_side_pad }}px!important;
    padding-right: {{ block.settings.your_savings_summ_lap_side_pad }}px!important;
    
    {% if block.settings.your_savings_summ_display_on == 'Mobile_Only' %}
      display: none;
    {% endif %}
    
    {% case block.settings.your_savings_summ_border_style %}
      {% when 'full_border' %}
      	border: {{ block.settings.your_savings_summ_border_thickness }}px solid {{ block.settings.your_savings_summ_border_col }}!important;
    
      {% when 'top_bt_border' %}
        border-top: {{ block.settings.your_savings_summ_border_thickness }}px solid {{ block.settings.your_savings_summ_border_col }}!important;
        border-bottom: {{ block.settings.your_savings_summ_border_thickness }}px solid {{ block.settings.your_savings_summ_border_col }}!important;            
    
      {% when 'top_border_only' %}
      	border-top: {{ block.settings.your_savings_summ_border_thickness }}px solid {{ block.settings.your_savings_summ_border_col }}!important;
    
      {% when 'bottom_border_only' %}
      	border-bottom: {{ block.settings.your_savings_summ_border_thickness }}px solid {{ block.settings.your_savings_summ_border_col }}!important;
    
      {% when 'side_border_only' %}
        border-left: {{ block.settings.your_savings_summ_border_thickness }}px solid {{ block.settings.your_savings_summ_border_col }}!important;
        border-right: {{ block.settings.your_savings_summ_border_thickness }}px solid {{ block.settings.your_savings_summ_border_col }}!important;
    
    {% endcase %}
    
    {% if block.settings.your_savings_summ_shadow_coverage > 0 %}
    	box-shadow: 0 {{ block.settings.your_savings_summ_shadow_coverage }}px 3px {{ block.settings.your_savings_summ_shadow_col }}!important;
    
    	{% if block.settings.your_savings_summ_shadow_coverage > block.settings.your_savings_summ_margin_pd_bt_lap %}
          margin-bottom: {{ block.settings.your_savings_summ_shadow_coverage | plus: 1 }}px!important;
    	{% endif %}
    
    {% endif %}
    
    margin-top: {{ block.settings.your_savings_summ_margin_pd_top_lap }}px;
    margin-bottom: {{ block.settings.your_savings_summ_margin_pd_bt_lap }}px;
    
    text-align: {{ block.settings.your_savings_summ_msg_align }};
    
  }


</style>

<!-- /*   MOBILE STYLE */ -->

<style>
  @media only screen and (max-width: 600px) {
    .your_savings_summ_bar{
      padding-top: {{ block.settings.your_savings_summ_mob_top_pad }}px!important;
      padding-bottom: {{ block.settings.your_savings_summ_mob_bt_pad }}px!important;
      padding-left: {{ block.settings.your_savings_summ_mob_side_pad }}px!important;
      padding-right: {{ block.settings.your_savings_summ_mob_side_pad }}px!important;
      
      {% if block.settings.your_savings_summ_display_on == 'Desktop_Only' %}
      	display: none;
      {% endif %}
      
      margin-top: {{ block.settings.your_savings_summ_margin_pd_top_mob }}px;
      margin-bottom: {{ block.settings.your_savings_summ_margin_pd_bt_mob }}px;
      
      {% if block.settings.your_savings_summ_shadow_coverage > 0 %}
    	box-shadow: 0 {{ block.settings.your_savings_summ_shadow_coverage }}px 3px {{ block.settings.your_savings_summ_shadow_col }}!important;
    
    	{% if block.settings.your_savings_summ_shadow_coverage > block.settings.your_savings_summ_margin_pd_bt_mob %}
          margin-bottom: {{ block.settings.your_savings_summ_shadow_coverage | plus: 1 }}px!important;
    	{% endif %}
    
      {% endif %}
      
    } 
 
  }
</style>
<!-- End of mobile style -->

<!-- /*   SPECIFIC STYLE */ -->

<style>
  .your_savings_summ_bar > p {margin: 0; display: initial; vertical-align: middle;}
  
  #discount_mark {
    display: inline-flex;
    padding: 0px 7px;
    vertical-align: middle;
    -webkit-box-align: center;
    align-items: center;
    background: rgba(0,0,0,0.05);
    border-radius: 3px;
    font-size: 13px;
    font-weight: 600;
    margin-left: 8px;
  }

  #discount_icon {
    margin-right: 8px;
    color: #585858;
  }

    #discount_icon_close {
        outline: none;
        margin-left: 6px;
        appearance: none;
        -webkit-appearance: none;
        -moz-appearance: none;
        appearance: none;
        -webkit-animation: none;
        animation: none;
        -webkit-animation-delay: 0;
        animation-delay: 0;
        -webkit-animation-direction: normal;
        animation-direction: normal;
        -webkit-animation-duration: 0;
        animation-duration: 0;
        -webkit-animation-fill-mode: none;
        animation-fill-mode: none;
        -webkit-animation-iteration-count: 1;
        animation-iteration-count: 1;
        -webkit-animation-name: none;
        animation-name: none;
        -webkit-animation-play-state: running;
        animation-play-state: running;
        -webkit-animation-timing-function: ease;
        animation-timing-function: ease;
        -webkit-backface-visibility: visible;
        backface-visibility: visible;
        background: 0;
        background-attachment: scroll;
        background-clip: border-box;
        background-color: transparent;
        background-image: none;
        background-origin: padding-box;
        background-position: 0 0;
        background-position-x: 0;
        background-position-y: 0;
        background-repeat: repeat;
        background-size: auto auto;
        border: 0;
        border-style: none;
        border-width: medium;
        border-color: inherit;
        border-bottom: 0;
        border-bottom-color: inherit;
        border-bottom-left-radius: 0;
        border-bottom-right-radius: 0;
        border-bottom-style: none;
        border-bottom-width: medium;
        border-collapse: separate;
        -webkit-border-image: none;
        -o-border-image: none;
        border-image: none;
        border-left: 0;
        border-left-color: inherit;
    }

    .your_savings_txt {
        display: table;
        margin: auto;
    }
    .your_savings_txt>p {
        margin: 0;
        vertical-align: middle;
        color: {{ block.settings.your_savings_txt_fcol }};
        font-family: {{ block.settings.your_savings_txt_font | replace: 'Google_', '' | replace: '+', ' ' }};
        font-weight: {{ block.settings.your_savings_txt_font_weight }};
        font-size: {{ block.settings.your_savings_txt_font_laptop_size }}px;
    }

    @media only screen and (max-width: 600px) {
        .your_savings_txt>p {
            font-size: {{ block.settings.your_savings_txt_font_mob_size }}px;
        }
    }

    .right_part_2>p {
        margin: 0;
        display: inline;
        color: {{ block.settings.your_savings_price_fcol }};
        font-family: {{ block.settings.your_savings_price_font | replace: 'Google_', '' | replace: '+', ' ' }};
        font-weight: {{ block.settings.your_savings_price_font_weight }};
        font-size: {{ block.settings.your_savings_price_font_laptop_size }}px;
    }

    @media only screen and (max-width: 600px) {
        .right_part_2>p {
            font-size: {{ block.settings.your_savings_price_font_mob_size }}px;
            margin-right {{ block.settings.your_savings_summ_lap_side_pad }}px;
        }
    }

 </style>


<div class="your_savings_summ_bar" style="display: flow-root;">

  <div class="left_part" style="display: flex; float: left;">
	<div class="your_savings_txt">
       {{ block.settings.your_savings_txt }}
    </div>

  	<div class="discount_icon_wrapper" style="visibility: hidden;">
