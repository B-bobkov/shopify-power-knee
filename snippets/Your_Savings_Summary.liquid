                <svg width="10" style="width: 9px;" viewBox="0 0 10 10"><path d="M9.677 8.118a1.102 1.102 0 11-1.559 1.56L5 6.558 1.882 9.677a1.102 1.102 0 11-1.56-1.559L3.442 5 .323 1.882A1.102 1.102 0 111.882.322L5 3.442 8.118.323a1.102 1.102 0 111.56 1.559L6.558 5l3.118 3.118z" fill="#A1A1A1" fill-rule="nonzero"></path></svg>
            </button>
        </span>      
    </div>
  </div>
  <div class="right_part_2" style=" float: right; display: table;">
    <p></p>
  </div>
  
  <div class="right_part" style=" float: right; display: table; margin: 0; font-size: 10px; visibility: hidden;">
    <p></p>
  </div>
    







    {% if block.settings.your_savings_summ_stick_bt_lap == true %}  
    <input class="sticky_lap" type="text" value="stick_lap_yes">
  {% else %}
    <input class="sticky_lap" type="text" value="stick_lap_no">
  {% endif %}

  {% if block.settings.your_savings_summ_stick_bt_mob == true %}  
    <input class="sticky_mob" type="text" value="stick_mob_yes">
  {% else %}
    <input class="sticky_mob" type="text" value="stick_mob_no">
  {% endif %}  	
  
</div>


