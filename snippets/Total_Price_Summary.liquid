{% if block.settings.total_price_font contains 'Google' %}
<link href="//fonts.googleapis.com/css?family={{ block.settings.total_price_font | replace: 'Google_', '' | replace: "'", "" }}:light,normal,bold" rel="stylesheet" type="text/css" />
{% endif %}

{% if block.settings.total_txt_font contains 'Google' %}
<link href="//fonts.googleapis.com/css?family={{ block.settings.total_txt_font | replace: 'Google_', '' | replace: "'", "" }}:light,normal,bold" rel="stylesheet" type="text/css" />
{% endif %}

  
<!-- /*   GENERAL STYLE */ -->

<style>
  .total__price_summ_bar {
    
    background-color: {{ block.settings.total__price_summ_bg_col }};
    
    padding-top: {{ block.settings.total__price_summ_lap_top_pad }}px!important;
    padding-bottom: {{ block.settings.total__price_summ_lap_bt_pad }}px!important;
    padding-left: {{ block.settings.total__price_summ_lap_side_pad }}px!important;
    padding-right: {{ block.settings.total__price_summ_lap_side_pad }}px!important;
    
    {% if block.settings.total__price_summ_display_on == 'Mobile_Only' %}
      display: none;
    {% endif %}
    
    {% case block.settings.total__price_summ_border_style %}
      {% when 'full_border' %}
      	border: {{ block.settings.total__price_summ_border_thickness }}px solid {{ block.settings.total__price_summ_border_col }}!important;
    
      {% when 'top_bt_border' %}
        border-top: {{ block.settings.total__price_summ_border_thickness }}px solid {{ block.settings.total__price_summ_border_col }}!important;
        border-bottom: {{ block.settings.total__price_summ_border_thickness }}px solid {{ block.settings.total__price_summ_border_col }}!important;            
    
      {% when 'top_border_only' %}
      	border-top: {{ block.settings.total__price_summ_border_thickness }}px solid {{ block.settings.total__price_summ_border_col }}!important;
    
      {% when 'bottom_border_only' %}
      	border-bottom: {{ block.settings.total__price_summ_border_thickness }}px solid {{ block.settings.total__price_summ_border_col }}!important;
    
      {% when 'side_border_only' %}
        border-left: {{ block.settings.total__price_summ_border_thickness }}px solid {{ block.settings.total__price_summ_border_col }}!important;
        border-right: {{ block.settings.total__price_summ_border_thickness }}px solid {{ block.settings.total__price_summ_border_col }}!important;
    
    {% endcase %}
    
    {% if block.settings.total__price_summ_shadow_coverage > 0 %}
    	box-shadow: 0 {{ block.settings.total__price_summ_shadow_coverage }}px 3px {{ block.settings.total__price_summ_shadow_col }}!important;
    
    	{% if block.settings.total__price_summ_shadow_coverage > block.settings.total__price_summ_margin_pd_bt_lap %}
          margin-bottom: {{ block.settings.total__price_summ_shadow_coverage | plus: 1 }}px!important;
    	{% endif %}
    
    {% endif %}
    
    margin-top: {{ block.settings.total__price_summ_margin_pd_top_lap }}px;
    margin-bottom: {{ block.settings.total__price_summ_margin_pd_bt_lap }}px;
    
    text-align: {{ block.settings.total__price_summ_msg_align }};
    
  }
  
  {% comment %} {% if block.settings.total__price_summ_stick_bt_lap == true %}
    @media only screen and (min-width: 600px) {
      .total__price_summ_bar {
        position: fixed;
        bottom: 0px;
        width: 500px;
      }
    }
  {% endif %}
  
  {% if block.settings.total__price_summ_stick_bt_mob == true %}
    @media only screen and (max-width: 600px) {
      .total__price_summ_bar {
        position: fixed;
        bottom: 0px;
        width: 356.44px;
      }
    }
  {% endif %}   {% endcomment %}

</style>

<!-- /*   MOBILE STYLE */ -->

<style>
  @media only screen and (max-width: 600px) {
    .total__price_summ_bar{
      padding-top: {{ block.settings.total__price_summ_mob_top_pad }}px!important;
      padding-bottom: {{ block.settings.total__price_summ_mob_bt_pad }}px!important;
      padding-left: {{ block.settings.total__price_summ_mob_side_pad }}px!important;
      padding-right: {{ block.settings.total__price_summ_mob_side_pad }}px!important;
      
      {% if block.settings.total__price_summ_display_on == 'Desktop_Only' %}
      	display: none;
      {% endif %}
      
      margin-top: {{ block.settings.total__price_summ_margin_pd_top_mob }}px;
      margin-bottom: {{ block.settings.total__price_summ_margin_pd_bt_mob }}px;
      
      {% if block.settings.total__price_summ_shadow_coverage > 0 %}
    	box-shadow: 0 {{ block.settings.total__price_summ_shadow_coverage }}px 3px {{ block.settings.total__price_summ_shadow_col }}!important;
    
    	{% if block.settings.total__price_summ_shadow_coverage > block.settings.total__price_summ_margin_pd_bt_mob %}
          margin-bottom: {{ block.settings.total__price_summ_shadow_coverage | plus: 1 }}px!important;
    	{% endif %}
    
      {% endif %}
      
    } 
 
  }
</style>
<!-- End of mobile style -->

<!-- /*   SPECIFIC STYLE */ -->

<style>
  .total__price_summ_bar > p {margin: 0; display: initial; vertical-align: middle;}
  
  #ajax_cart_total_price {
    position: absolute;
    right: {{ block.settings.total__price_summ_lap_side_pad | plus: block.settings.total__price_summ_border_thickness }}px;

    color: {{ block.settings.total_price_fcol }};
    font-family: {{ block.settings.total_price_font | replace: 'Google_', '' | replace: '+', ' ' }};
    font-weight: {{ block.settings.total_price_font_weight }};
    font-size: {{ block.settings.total_price_font_laptop_size }}px;
  }

  @media only screen and (max-width: 600px) {
    #ajax_cart_total_price {
        position: absolute;
        right: {{ block.settings.total__price_summ_mob_side_pad | plus: block.settings.total__price_summ_border_thickness }}px;
        font-size: {{ block.settings.total_price_font_mob_size }}px;
      }
  }

  .total__price_summ_bar>p:first-child {
    color: {{ block.settings.total_txt_fcol }};
    font-family: {{ block.settings.total_txt_font | replace: 'Google_', '' | replace: '+', ' ' }};
    font-weight: {{ block.settings.total_txt_font_weight }};
    font-size: {{ block.settings.total_txt_font_laptop_size }}px;
  }

  @media only screen and (max-width: 600px) {
    .total__price_summ_bar>p:first-child {
      font-size: {{ block.settings.total_txt_font_mob_size }}px;
    }    
  }

</style>


<div class="total__price_summ_bar" style="display: flex;">

  {{ block.settings.total_txt }}
  
  <p id="ajax_cart_total_price"></p>
  	
  {% if block.settings.total__price_summ_stick_bt_lap == true %}  
    <input class="sticky_lap" type="text" value="stick_lap_yes">
  {% else %}
    <input class="sticky_lap" type="text" value="stick_lap_no">
  {% endif %}

  {% if block.settings.total__price_summ_stick_bt_mob == true %}  
    <input class="sticky_mob" type="text" value="stick_mob_yes">
  {% else %}
    <input class="sticky_mob" type="text" value="stick_mob_no">
  {% endif %}

</div>


